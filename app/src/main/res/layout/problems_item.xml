<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_item"
    android:padding="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="45dp">

    <TextView
        android:id="@+id/id_problem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Александр"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/id_problem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/person_surname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Непретимов"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/person_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Палата: "
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_problem" />

    <TextView
        android:id="@+id/edit_num_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="номер палаты"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/room_number"
        app:layout_constraintTop_toBottomOf="@+id/person_name" />

    <TextView
        android:id="@+id/bed_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Койка: "
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/person_surname"
        app:layout_constraintTop_toBottomOf="@+id/person_surname" />

    <TextView
        android:id="@+id/edit_num_bed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="номер койки"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bed_num"
        app:layout_constraintStart_toEndOf="@+id/bed_num"
        app:layout_constraintTop_toBottomOf="@+id/person_name" />

    <TextView
        android:id="@+id/text_problem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Причина вызова: "
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_number" />

    <TextView
        android:id="@+id/problem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="причина вызова"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/text_problem"
        app:layout_constraintTop_toBottomOf="@+id/edit_num_room" />

</androidx.constraintlayout.widget.ConstraintLayout>